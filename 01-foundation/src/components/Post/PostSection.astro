---
import { trpcAstro } from "../../client";
import ButtonDelete from "./ButtonDelete.astro";

const title = "Post Section";

const posts = await trpcAstro.post.getAll.query();
---

<h3>{title}</h3>

<button id="btn-create">Create</button>
<div id="post-section">
  {
    posts.map(({ _id, title, description }) => (
      <div id={_id} class="container">
        <div class="top">
          <img src="https://images.unsplash.com/photo-1679155506707-a072b305dd91?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyMXx8fGVufDB8fHx8&auto=format&fit=crop&w=500&q=60" />
          <div class="top-text">
            <span>{_id}</span>
            <p class="name">{title}</p>
            <p class="details">{description}</p>
          </div>
        </div>

        <ButtonDelete id={_id} />
      </div>
    ))
  }
</div>

<style>
  h1 {
    font-weight: bold;
    font-size: 1.5rem;
  }

  .container {
    display: flex;
    flex-direction: column;
    padding: 10px;
    box-shadow: 2px 2px 20px 3px gray;
    width: 420px;
    border-radius: 5px;
    transition: 500ms ease;
    margin: 2em;
  }
  .container:hover {
    transform: scale(1.1);
    box-shadow: 10px 10px 20px 3px gray;
  }

  .top {
    display: flex;
  }

  img {
    width: 50px;
    height: 50px;
    border-radius: 25px;
    margin-right: 10px;
  }

  .name {
    font-weight: 600;
  }
  span {
    color: rgb(125, 125, 125);
    font-weight: 400;
    font-size: 15px;
  }

  span:hover {
    text-decoration: underline;
    cursor: pointer;
  }

  .details {
    font-size: 14px;
  }

  .bottom {
    border: 1px solid rgba(132, 132, 132, 0.444);
    display: flex;
    height: 100px;
    width: 350px;
    border-radius: 20px;
    margin-top: 15px;
    margin-left: 40px;
  }

  .grey-box {
    height: 100px;
    width: 140px;
    background-color: rgba(132, 132, 132, 0.444);
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
  }

  .bottom-text {
    /* border: 2px solid red; */
    height: 70px;
    margin-left: 15px;
    margin-top: 10px;
  }

  .btn {
    display: flex;
    align-items: center;
    background: none;
    border: 1px solid lighten(gray, 24%);
    height: 48px;
    padding: 0 24px 0 16px;
    letter-spacing: 0.25px;
    border-radius: 24px;
    cursor: pointer;

    &:focus {
      outline: none;
    }

    .mdi {
      margin-right: 8px;
    }
  }
</style>

<script>
  import { trpcAstro } from "../../client";

  const greeting = await trpcAstro.getHello.query("foo");
  console.log(greeting);

  const posts = await trpcAstro.post.getAll.query();
  console.log(posts);

  const reload = () => {
    window.location.reload();
  };

  const createBtn = document.querySelector("#btn-create");
  createBtn?.addEventListener("click", async () => {
    await trpcAstro.post.create.mutate({
      title: "Example",
      author: "Jonh Doe",
      description: "Description",
      published: true,
    });
    reload();
  });
</script>
